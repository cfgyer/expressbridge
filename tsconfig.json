{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["./types", "node_modules/@types"],
    "lib": [      
      "es2020",
    ]
  },
  "include": ["src/*"],
  "exclude": ["dist", "node_modules", "src/tests"]
}
